[user]
  name = Sonny Scroggin
  email = sonny@scrogg.in
  signingkey = 64C4C651

[color]
  diff = auto
  status = auto
  branch = auto

[color "branch"]
  current = yellow reverse
  local = yellow

[color "diff"]
  meta = yellow

[color "status"]
  added = yellow
  change = green
  untracked = cyan

[status]
  relativePaths = false

[alias]
  br = branch
  co = checkout
  lsf = ls-files
  dc = diff --cached
  lc = log ORIG_HEAD.. --stat --no-merges
  gl = log --decorate --stat --graph --pretty=format:'%C(yellow)%h%Creset %Cblue%an%Creset: %C(cyan)%s %Creset(%cr)%n'
  st = status -sb
  put = push scrogson HEAD
  pr = pull-request -o

[core]
  editor = nvim
  autocrlf = input

[apply]
  whitespace = nowarn

[rerere]
  enabled = 1
  autoupdate = 1

[format]
  pretty = %C(yellow)%h%Creset %s %C(red)(%an, %cr)%Creset

[github]
  user = "scrogson"

[format]
  pretty = %C(yellow)%h%Creset %s %C(red)(%an, %cr)%Creset

[push]
  default = current

[gpg]
  program = /usr/bin/gpg

[commit]
  gpgsign = true

[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
